{
  "name": "bahmni-services",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/bahmni-services/src",
  "projectType": "library",
  "tags": ["type:lib", "scope:bahmni"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/bahmni-services"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/bahmni-services/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/bahmni-services/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "type-check": {
      "executor": "@nx/tsc:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "tsConfig": "packages/bahmni-services/tsconfig.lib.json",
        "outputPath": "dist/out-tsc/packages/bahmni-services"
      }
    }
  }
}
