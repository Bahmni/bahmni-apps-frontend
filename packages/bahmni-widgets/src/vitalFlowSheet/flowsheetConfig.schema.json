{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Flowsheet Configuration Schema",
    "description": "Schema for flowsheet control configuration",
    "type": "object",
    "required": [
        "latestCount",
        "obsConcepts"
    ],
    "additionalProperties": false,
    "properties": {
        "latestCount": {
            "type": "integer",
            "description": "Count of latest observations to display"
        },
        "groupBy": {
            "type": "string",
            "enum": [
                "encounters",
                "visits",
                "obstime"
            ],
            "description": "Criteria to group observations"
        },
        "obsConcepts": {
            "type": "array",
            "description": "List of observation concepts to include in the flowsheet",
            "items": {
                "type": "string"
            }
        }
    }
}